<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="0dp" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/JSONTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

        </ScrollView>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:context=".YourActivity"
        tools:layout_editor_absoluteX="16dp">

        <!-- Upload File Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/fileUploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:onClick="uploadFile"
            android:text="Upload a File"
            android:textAllCaps="false"
            app:cornerRadius="32dp"
            app:icon="@drawable/baseline_file_upload_24"
            app:layout_constraintEnd_toStartOf="@+id/generateLocationsButton"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon" />

        <!-- Generate Locations Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/generateLocationsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:onClick="generateLocationsDatabase"
            android:text="Generate Database"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>

